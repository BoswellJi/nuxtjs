{
 "version": "0.2.0",
 "configurations": [
  {
   "type": "node",
   "request": "launch",
   "name": "Launch Nuxt.js App",
   "runtimeExecutable": "pnpm",
   "runtimeArgs": ["run", "dev"],
   "cwd": "${workspaceFolder}",
   "autoAttachChildProcesses": true,
   "env": {
    "NODE_ENV": "development"
   },
   "console": "integratedTerminal",
   "skipFiles": ["<node_internals>/**"]
  }
 ]
}
